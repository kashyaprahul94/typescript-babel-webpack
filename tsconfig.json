{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": [ "es2015", "es2016", "es2017", "dom" ],
    "typeRoots" : [ "./node_modules/@types" ],
    "outDir": "./build",
    "baseUrl": "./src"
  },
  "exclude": [
    "node_modules",
    "build"
  ],
  "include": [
    "*.ts",
    "src/*.ts",
    "src/**/*.ts"
  ]
}